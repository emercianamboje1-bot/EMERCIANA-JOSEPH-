
# 1. Create the Student class
class Student:
    def __init__(self, name, score):
        self.name = name
        self.score = score

# 2. Create the Gradebook class
class Gradebook:
    def __init__(self):
        self.students = []  # Empty list to hold Student objects
    
    # 3. Method to add a student
    def add_student(self, student):
        self.students.append(student)
    
    # 4. Method to calculate average
    def get_average(self):
        if not self.students:  # Handle empty gradebook
            return 0
        
        total_score = 0
        for student in self.students:
            total_score += student.score
        
        return total_score / len(self.students)

# Example usage for Activity 3
if __name__ == "__main__":
    # Create a gradebook
    gradebook = Gradebook()
    
    # Add students
    gradebook.add_student(Student("Alice", 85))
    gradebook.add_student(Student("Bob", 92))
    gradebook.add_student(student("maria",78))
    
    # Calculate and print average
    print(f"Class average: {gradebook.get_average():.2f}")  


